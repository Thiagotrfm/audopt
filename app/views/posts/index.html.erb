<p id="notice"><%= notice %></p>
<div class="posts-header">

<%= link_to new_user_post_url, class: "btn-floating btn-large waves-effect waves-light red", style: 'margin: 0 0 1% 1%;' do %>
  <i class="material-icons">add</i>
<% end %>

  <span class="order-content">
    <h6>Ordenar</h6>
    <%= link_to "Data (mais recente primeiro)", posts_path(order: "date_desc") %><br>
    <%= link_to "Data (mais antiga primeiro)", posts_path(order: "date_asc") %>
  </span>
</div>

<table>
  <tbody>
    <% @posts.each do |post| %>
        <tr class="publication">
          <td id="publication-photo"><%= link_to(image_tag(post.animal.avatar.url(:thumb), class:'post-profile-image'), post_path(post)) %></td>
          <td>
            <table>
              <tr><td><%= post.location %></td></tr>
              <tr><td><%= post.text %></td></tr>
              <tr><td><%= post.created_at %></td></tr>
            </table>
          </td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>
