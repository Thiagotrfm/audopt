<div class="col s12" id="messages-card">
  <div class="card blue-grey darken-3">
    <div class="card-content white-text">
      <span class="card-title"><strong>Lista de Mensagens Recebidas</strong></span>
    </div>
  </div>
</div>

<% @messages.each do |message| %>

  <div id="message-sent-box">
    <div class="card blue-grey darken-3">
      <div class="card-content white-text">
        <span class="card-title"><strong>Enviada por <%= message.sender.name%> em <%= message.created_at.strftime("%d %b. %Y") %> Ã s <%= message.created_at.strftime("%H:%m") %></strong></span>
      </div>
      <div class="card-action">
        <p id="text-message">Mensagem: <strong><%= message.text %></strong></p>
        <%= link_to 'Apagar', message, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn' %>
      </div>
    </div>
  </div>

<% end %>

