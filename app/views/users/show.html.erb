<div class="user-show">
  <span class="user-image"><%= image_tag @user.avatar.url(:thumb), class:'user-profile-image' %></span>
  <div class="user-info">
    <table id="user-attributes">
      <tr><td>Nome:<%= @user.name%></td></tr>
      <tr><td>E-mail:<%= @user.email%></td></tr>
      <tr><td>Telefone:<%= @user.phone%></td></tr>
    </table>

    <%= link_to 'Denunciar usuário', "#{@user.id}/report_user", class: "btn btn-info red darken-4", id: "edit-path" unless @user == current_user %>
    <%= link_to 'Denúncias', reports_list_url(@user), class:'btn btn-primary' if current_user.role_admin? %>
    <%= link_to 'Posts interessados', user_interested_post_url(@user), class:'btn btn-primary' %>

  </div>
</div>
