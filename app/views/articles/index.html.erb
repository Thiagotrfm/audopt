<%= link_to new_article_path, class: "btn-floating btn-large waves-effect waves-light red", style: 'margin: 2% 0 1% 1%;' do %>
  <i class="material-icons">add</i>
<% end %>

<% @articles.each do |article| %>
  <div class="article">
    <table>
      <div class="art-info">
          <tr>
            <td><%= link_to "#{article.title}", article_path(article)%></td>
          </tr>
          <tr>
            <td><%= "Escrita por: #{User.find(article.user_id).name }"%></td>
          </tr>
          <tr>
            <td><%= "#{article.description}}"%></td>
          </tr>
      </div>
    </table>
  </div>
<% end %>
